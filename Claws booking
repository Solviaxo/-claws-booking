<div class="card">
<h1>CLAWS Sports Media Booking</h1>
<p>Click a day → type your name → it saves.</p>

<table id="calendar"></table>
</div>

<script>
const calendar = document.getElementById("calendar");
const date = new Date();
const year = date.getFullYear();
const month = date.getMonth();

const bookings = JSON.parse(localStorage.getItem("clawsBookings") || "{}");

function render(){
  calendar.innerHTML = "";
  const firstDay = new Date(year, month, 1).getDay();
  const days = new Date(year, month+1, 0).getDate();

  let html = "<tr>";
  ["Sun","Mon","Tue","Wed","Thu","Fri","Sat"].forEach(d=>{
    html += "<th>"+d+"</th>";
  });
  html += "</tr><tr>";

  for(let i=0;i<firstDay;i++) html += "<td></td>";

  for(let d=1; d<=days; d++){
    const key = `${year}-${month}-${d}`;
    const name = bookings[key] || "";
    html += `<td class="${name?"booked":""}" onclick="book('${key}')">
      ${d}<br><small>${name}</small>
    </td>`;
    if((d+firstDay)%7===0) html+="</tr><tr>";
  }
  html += "</tr>";
  calendar.innerHTML = html;
}

function book(key){
  const name = prompt("Enter your name for this day:");
  if(name){
    bookings[key] = name;
    localStorage.setItem("clawsBookings", JSON.stringify(bookings));
    render();
  }
}

render();
</script>

</body>
